@page
@using McWuT.Web.Areas.Identity.Pages.Account
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container py-5 d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg w-100" style="max-width: 400px;">
        <div class="card-body p-4 text-center">
            <h2 class="card-title mb-4">@ViewData["Title"]</h2>
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <form class="form-inline mb-3" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="btn btn-danger w-100">Click here to Logout</button>
                </form>
            }
            else
            {
                <div class="alert alert-success">You have successfully logged out of the application.</div>
            }
        </div>
    </div>
</div>
