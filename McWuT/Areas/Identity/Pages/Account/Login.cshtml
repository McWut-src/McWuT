@page
@using McWuT.Web.Areas.Identity.Pages.Account
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container py-5 d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg" style="max-width: 400px; width: 100%;">
        <div class="card-body p-4">
            <h2 class="card-title text-center mb-4">Sign in to your account</h2>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <button id="login-submit" type="submit" class="btn btn-primary w-100 mb-3">Log in</button>
                <div class="d-flex flex-column gap-2">
                    <a id="forgot-password" asp-page="./ForgotPassword" class="link-secondary">Forgot your password?</a>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-secondary">Register as a new user</a>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="link-secondary">Resend email confirmation</a>
                </div>
            </form>
            <hr class="my-4" />
            <div>
                <h5 class="text-center mb-3">Sign in with</h5>
                @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div class="alert alert-info text-center">
                        There are no external authentication services configured.<br />
                        <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank">Learn how to enable external logins</a>.
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-flex flex-column gap-2">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                @provider.DisplayName
                            </button>
                        }
                    </form>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
