@page "{id:int}"
@model McWuT.Web.Pages.MyNotes.DeleteModel
@attribute [Authorize]
@{
    ViewData["Title"] = "Delete Note";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-danger shadow-sm">
                <div class="card-body p-4">
                    <h2 class="card-title mb-3 text-danger">Are you sure you want to delete this note?</h2>
                    <dl class="row">
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9">@Model.Note.Title</dd>
                        <dt class="col-sm-3">Content</dt>
                        <dd class="col-sm-9" style="white-space: pre-wrap;">@Model.Note.Content</dd>
                    </dl>
                    <form method="post" class="d-flex gap-2">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
