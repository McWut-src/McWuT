@page "{id}"
@model McWuT.Web.Pages.MyNotes.DeleteModel
@attribute [Authorize]
@{
    ViewData["Title"] = "Delete Note";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Delete Note
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-warning me-2"></i>
                        <strong>Warning!</strong> This action cannot be undone. Are you sure you want to delete this note?
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Title:</div>
                        <div class="col-sm-9">@(string.IsNullOrWhiteSpace(Model.Note.Title) ? "(Untitled)" : Model.Note.Title)</div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Note.Content))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3 fw-bold">Content:</div>
                            <div class="col-sm-9"><div class="text-muted" style="white-space: pre-wrap;">@Model.Note.Content</div></div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Created:</div>
                        <div class="col-sm-9"><small class="text-muted">@Model.Note.CreatedDate.ToLocalTime().ToString("MMMM dd, yyyy 'at' h:mm tt")</small></div>
                    </div>

                    @if (Model.Note.UpdatedDate.HasValue)
                    {
                        <div class="row mb-4">
                            <div class="col-sm-3 fw-bold">Last Updated:</div>
                            <div class="col-sm-9"><small class="text-muted">@Model.Note.UpdatedDate.Value.ToLocalTime().ToString("MMMM dd, yyyy 'at' h:mm tt")</small></div>
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="./Index" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this note? This action cannot be undone.')">
                                <i class="bi bi-trash me-1"></i>Delete Note
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
