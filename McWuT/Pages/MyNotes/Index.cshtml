@page
@model McWuT.Web.Pages.MyNotes.IndexModel
@attribute [Authorize]
@{
    ViewData["Title"] = "My Notes";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-journal-text me-2"></i>My Notes
                    </h4>
                    <a asp-page="./Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>New Note
                    </a>
                </div>
                <div class="card-body">
                    <form method="get" class="mb-4">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input type="text" class="form-control" name="Query" value="@Model.Query" placeholder="Search by title or content...">
                                    <button type="submit" class="btn btn-outline-secondary">Search</button>
                                </div>
                            </div>
                            <div class="col-md-4">
                                @if (!string.IsNullOrEmpty(Model.Query))
                                {
                                    <a asp-page="./Index" class="btn btn-outline-primary">
                                        <i class="bi bi-x-circle me-1"></i>Clear Search
                                    </a>
                                }
                            </div>
                        </div>
                    </form>

                    @if (Model.Notes?.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Title</th>
                                        <th>Created</th>
                                        <th>Updated</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var note in Model.Notes!)
                                    {
                                        <tr>
                                            <td>
                                                <i class="bi bi-journal-text me-2"></i>
                                                <strong>@(string.IsNullOrWhiteSpace(note.Title) ? "(Untitled)" : note.Title)</strong>
                                                @if (!string.IsNullOrWhiteSpace(note.Content))
                                                {
                                                    <div class="text-muted small text-truncate" style="max-width: 500px;">@note.Content</div>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">@note.CreatedDate.ToLocalTime().ToString("MMM dd, yyyy")</small>
                                            </td>
                                            <td>
                                                <small class="text-muted">@(note.UpdatedDate.HasValue ? note.UpdatedDate.Value.ToLocalTime().ToString("MMM dd, yyyy") : "-")</small>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-page="./Details" asp-route-id="@note.UniqueId" class="btn btn-sm btn-outline-secondary" title="Details">
                                                        <i class="bi bi-info-circle"></i>
                                                    </a>
                                                    <a asp-page="./Edit" asp-route-id="@note.UniqueId" class="btn btn-sm btn-outline-primary" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-page="./Delete" asp-route-id="@note.UniqueId" class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-journal-x display-1 text-muted"></i>
                            <h5 class="mt-3">No notes found</h5>
                            <p class="text-muted">
                                @if (!string.IsNullOrEmpty(Model.Query))
                                {
                                    <span>No notes match your search criteria.</span>
                                }
                                else
                                {
                                    <span>Start by creating your first note.</span>
                                }
                            </p>
                            <a asp-page="./Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-1"></i>Add First Note
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
