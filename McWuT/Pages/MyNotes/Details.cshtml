@page "{id}"
@model McWuT.Web.Pages.MyNotes.DetailsModel
@attribute [Authorize]
@{
    ViewData["Title"] = "Note Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-journal-text me-2"></i>@(string.IsNullOrWhiteSpace(Model.Note.Title) ? "(Untitled)" : Model.Note.Title)
                    </h4>
                    <div class="text-muted small text-end">
                        <div>Created: @Model.Note.CreatedDate.ToLocalTime().ToString("MMM dd, yyyy h:mm tt")</div>
                        <div>Updated: @(Model.Note.UpdatedDate.HasValue ? Model.Note.UpdatedDate.Value.ToLocalTime().ToString("MMM dd, yyyy h:mm tt") : "-")</div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-4" style="white-space: pre-wrap;">@Model.Note.Content</div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-page="./Edit" asp-route-id="@Model.Note.UniqueId" class="btn btn-primary">
                            <i class="bi bi-pencil me-1"></i>Edit
                        </a>
                        <a asp-page="./Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
