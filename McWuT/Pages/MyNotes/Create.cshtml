@page
@model McWuT.Web.Pages.MyNotes.CreateModel
@attribute [Authorize]
@{
    ViewData["Title"] = "New Note";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="bi bi-journal-plus me-2"></i>Create Note
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Title" class="form-label">
                                <i class="bi bi-type me-1"></i>@Html.DisplayNameFor(m => m.Input.Title)
                            </label>
                            <input asp-for="Input.Title" class="form-control" placeholder="Optional title..." />
                            <span asp-validation-for="Input.Title" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.Content" class="form-label">
                                <i class="bi bi-journal-text me-1"></i>@Html.DisplayNameFor(m => m.Input.Content)
                            </label>
                            <textarea asp-for="Input.Content" class="form-control" rows="8" placeholder="Write your note..."></textarea>
                            <span asp-validation-for="Input.Content" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="./Index" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i>Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
