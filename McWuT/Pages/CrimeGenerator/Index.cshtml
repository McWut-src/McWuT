@page
@model McWuT.Web.Pages.CrimeGenerator.IndexModel
@{
    ViewData["Title"] = "Crime Generator - Murder Mystery Game";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h1 class="display-4 mb-2">üîç Crime Generator</h1>
            <p class="lead text-muted">Solve procedurally generated murder mysteries</p>
        </div>
    </div>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="row">
            <!-- New Game Section -->
            <div class="col-md-6 mb-4">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            <i class="bi bi-plus-circle text-success me-2"></i>
                            Start New Mystery
                        </h5>
                        <p class="card-text flex-grow-1">
                            Generate a brand new murder mystery with unique characters, clues, and storyline using AI and procedural generation.
                        </p>
                        <form method="post" asp-page-handler="CreateGame">
                            <div class="mb-3">
                                <label for="difficulty" class="form-label">Difficulty Level:</label>
                                <select id="difficulty" name="difficulty" class="form-select">
                                    <option value="Easy">Easy - More clues, clearer evidence</option>
                                    <option value="Medium" selected>Medium - Balanced challenge</option>
                                    <option value="Hard">Hard - Fewer clues, red herrings</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-play-fill me-2"></i>
                                Generate New Case
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Game History Section -->
            <div class="col-md-6 mb-4">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-clock-history text-primary me-2"></i>
                            Your Cases
                        </h5>
                        @if (Model.UserGameSessions?.Any() == true)
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var game in Model.UserGameSessions.Take(5))
                                {
                                    <a asp-page="./Game" asp-route-id="@game.UniqueId" 
                                       class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">@game.Title</h6>
                                            <small>@game.CreatedDate.ToString("MMM dd, yyyy")</small>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <span class="badge bg-@(GetStateBadgeColor(game.State))">
                                                @game.State.ToString()
                                            </span>
                                            <small class="text-muted">@game.Difficulty</small>
                                        </div>
                                    </a>
                                }
                            </div>
                            @if (Model.UserGameSessions.Count() > 5)
                            {
                                <div class="text-center mt-3">
                                    <a asp-page="./History" class="btn btn-outline-primary btn-sm">
                                        View All Cases
                                    </a>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">No cases solved yet. Start your first mystery!</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Game Features Section -->
        <div class="row mt-4">
            <div class="col-12">
                <h3 class="text-center mb-4">Game Features</h3>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-people display-4 text-primary mb-3"></i>
                        <h5>Dynamic Characters</h5>
                        <p class="card-text">Unique suspects, victims, and witnesses generated using real profile data and AI-powered backstories.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-search display-4 text-success mb-3"></i>
                        <h5>Interactive Investigation</h5>
                        <p class="card-text">Explore crime scenes, collect evidence, and interrogate suspects in an immersive investigation experience.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-cpu display-4 text-warning mb-3"></i>
                        <h5>AI-Powered Stories</h5>
                        <p class="card-text">Every case features unique narratives, clues, and dialogue generated by advanced language models.</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Sign-in Prompt -->
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-0 shadow">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-person-lock display-1 text-muted mb-4"></i>
                        <h3>Sign In Required</h3>
                        <p class="lead mb-4">
                            You need to sign in to access the Crime Generator and save your game progress.
                        </p>
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary me-3">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Sign In
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-primary">
                            <i class="bi bi-person-plus me-2"></i>
                            Create Account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@functions {
    private string GetStateBadgeColor(McWuT.Data.Models.CrimeGenerator.GameSessionState state)
    {
        return state switch
        {
            McWuT.Data.Models.CrimeGenerator.GameSessionState.InProgress => "primary",
            McWuT.Data.Models.CrimeGenerator.GameSessionState.Solved => "success",
            McWuT.Data.Models.CrimeGenerator.GameSessionState.Failed => "danger",
            McWuT.Data.Models.CrimeGenerator.GameSessionState.Abandoned => "secondary",
            _ => "secondary"
        };
    }
}