@page
@model McWuT.Web.Pages.CrimeGenerator.GameModel
@{
    ViewData["Title"] = $"Game: {Model.GameSession?.Title}";
}

<div class="container py-4">
    @if (Model.GameSession != null)
    {
        <div class="row">
            <div class="col-12 mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h3 mb-1">@Model.GameSession.Title</h1>
                        <div class="text-muted">
                            <span class="badge bg-@(GetStateBadgeColor(Model.GameSession.State))">
                                @Model.GameSession.State.ToString()
                            </span>
                            <span class="ms-2">Difficulty: @Model.GameSession.Difficulty</span>
                            @if (Model.GameSession.StartTime.HasValue)
                            {
                                <span class="ms-2">Started: @Model.GameSession.StartTime.Value.ToString("MMM dd, yyyy HH:mm")</span>
                            }
                        </div>
                    </div>
                    <div>
                        <a asp-page="./Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to Cases
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Case Description -->
            <div class="col-12 mb-4">
                <div class="card border-0 shadow">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-clipboard-data text-primary me-2"></i>
                            Case Briefing
                        </h5>
                        <p class="card-text">@Model.GameSession.Description</p>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.GameSession.State == McWuT.Data.Models.CrimeGenerator.GameSessionState.InProgress)
        {
            <!-- Investigation Panel -->
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card border-0 shadow">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-people text-warning me-2"></i>
                                Characters
                            </h5>
                            <p class="text-muted">Investigate the people involved in this case.</p>
                            <button class="btn btn-warning" onclick="generateCharacters()">
                                <i class="bi bi-plus-circle me-2"></i>
                                Generate Characters
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card border-0 shadow">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-geo-alt text-success me-2"></i>
                                Crime Scene
                            </h5>
                            <p class="text-muted">Explore locations and gather evidence.</p>
                            <button class="btn btn-success" disabled>
                                <i class="bi bi-search me-2"></i>
                                Search Scene
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card border-0 shadow">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-clipboard-check text-info me-2"></i>
                                Evidence
                            </h5>
                            <p class="text-muted">Review collected clues and evidence.</p>
                            <button class="btn btn-info" disabled>
                                <i class="bi bi-eye me-2"></i>
                                Review Evidence
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card border-0 shadow">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-person-x text-danger me-2"></i>
                                Make Accusation
                            </h5>
                            <p class="text-muted">Ready to solve the case? Accuse a suspect.</p>
                            <button class="btn btn-danger" disabled>
                                <i class="bi bi-gavel me-2"></i>
                                Accuse Suspect
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Progress Panel -->
            <div class="row">
                <div class="col-12">
                    <div class="card border-0 shadow">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-graph-up text-primary me-2"></i>
                                Investigation Progress
                            </h5>
                            <div class="row">
                                <div class="col-md-3 text-center">
                                    <div class="border rounded p-3 mb-2">
                                        <i class="bi bi-clock display-4 text-muted"></i>
                                        <div class="mt-2">
                                            <strong>@((DateTime.UtcNow - (Model.GameSession.StartTime ?? DateTime.UtcNow)).ToString(@"hh\:mm"))</strong>
                                            <div class="small text-muted">Time Elapsed</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 text-center">
                                    <div class="border rounded p-3 mb-2">
                                        <i class="bi bi-lightbulb display-4 text-warning"></i>
                                        <div class="mt-2">
                                            <strong>@Model.GameSession.HintsUsed</strong>
                                            <div class="small text-muted">Hints Used</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 text-center">
                                    <div class="border rounded p-3 mb-2">
                                        <i class="bi bi-trophy display-4 text-success"></i>
                                        <div class="mt-2">
                                            <strong>@Model.GameSession.Score</strong>
                                            <div class="small text-muted">Score</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 text-center">
                                    <div class="border rounded p-3 mb-2">
                                        <i class="bi bi-star display-4 text-info"></i>
                                        <div class="mt-2">
                                            <strong>@Model.GameSession.Difficulty</strong>
                                            <div class="small text-muted">Difficulty</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Game Completed -->
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card border-0 shadow">
                        <div class="card-body text-center py-5">
                            @if (Model.GameSession.State == McWuT.Data.Models.CrimeGenerator.GameSessionState.Solved)
                            {
                                <i class="bi bi-check-circle display-1 text-success mb-4"></i>
                                <h3>Case Solved!</h3>
                                <p class="lead">Congratulations! You successfully solved this mystery.</p>
                            }
                            else if (Model.GameSession.State == McWuT.Data.Models.CrimeGenerator.GameSessionState.Failed)
                            {
                                <i class="bi bi-x-circle display-1 text-danger mb-4"></i>
                                <h3>Case Closed</h3>
                                <p class="lead">The case was closed, but the mystery remains unsolved.</p>
                            }
                            else
                            {
                                <i class="bi bi-dash-circle display-1 text-secondary mb-4"></i>
                                <h3>Case Abandoned</h3>
                                <p class="lead">This investigation was abandoned.</p>
                            }
                            
                            <div class="mt-4">
                                <a asp-page="./Index" class="btn btn-primary me-3">
                                    <i class="bi bi-plus-circle me-2"></i>
                                    Start New Case
                                </a>
                                <a asp-page="./Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-list me-2"></i>
                                    View All Cases
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <!-- Game Not Found -->
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-0 shadow">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-exclamation-triangle display-1 text-warning mb-4"></i>
                        <h3>Game Not Found</h3>
                        <p class="lead">The requested game session could not be found.</p>
                        <a asp-page="./Index" class="btn btn-primary">
                            <i class="bi bi-arrow-left me-2"></i>
                            Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    async function generateCharacters() {
        // This would make an AJAX call to generate characters
        alert('Character generation feature coming soon!');
    }
</script>

@functions {
    private string GetStateBadgeColor(McWuT.Data.Models.CrimeGenerator.GameSessionState state)
    {
        return state switch
        {
            McWuT.Data.Models.CrimeGenerator.GameSessionState.InProgress => "primary",
            McWuT.Data.Models.CrimeGenerator.GameSessionState.Solved => "success",
            McWuT.Data.Models.CrimeGenerator.GameSessionState.Failed => "danger",
            McWuT.Data.Models.CrimeGenerator.GameSessionState.Abandoned => "secondary",
            _ => "secondary"
        };
    }
}