@page
@using McWuT.Web.Pages
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h1 class="display-4 mb-2">Welcome to McWuT</h1>
            <p class="lead text-muted">Your personal dashboard</p>
        </div>
    </div>

    <div class="row g-4 justify-content-center">
        @if (User.Identity?.IsAuthenticated == true)
        {
            <!-- My Notes Section -->
            <div class="col-12 col-sm-6 col-lg-3">
                <a asp-page="/MyNotes/Index" class="text-decoration-none">
                    <div class="card h-100 text-center dashboard-card border-0 shadow-sm">
                        <div class="card-body d-flex flex-column justify-content-center py-5">
                            <i class="bi bi-journal-text display-1 text-primary mb-3"></i>
                            <h5 class="card-title text-dark mb-2">My Notes</h5>
                            <p class="card-text text-muted">Manage your personal notes and documents</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Password Vault Section -->
            <div class="col-12 col-sm-6 col-lg-3">
                <a asp-page="/PasswordVault/Index" class="text-decoration-none">
                    <div class="card h-100 text-center dashboard-card border-0 shadow-sm">
                        <div class="card-body d-flex flex-column justify-content-center py-5">
                            <i class="bi bi-shield-lock display-1 text-success mb-3"></i>
                            <h5 class="card-title text-dark mb-2">Password Vault</h5>
                            <p class="card-text text-muted">Securely store and manage your passwords</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Shopping Lists Section -->
            <div class="col-12 col-sm-6 col-lg-3">
                <a asp-page="/Shopping/Index" class="text-decoration-none">
                    <div class="card h-100 text-center dashboard-card border-0 shadow-sm">
                        <div class="card-body d-flex flex-column justify-content-center py-5">
                            <i class="bi bi-cart-check display-1 text-warning mb-3"></i>
                            <h5 class="card-title text-dark mb-2">Shopping Lists</h5>
                            <p class="card-text text-muted">Create and manage your shopping lists</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- User Settings Section -->
            <div class="col-12 col-sm-6 col-lg-3">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="text-decoration-none">
                    <div class="card h-100 text-center dashboard-card border-0 shadow-sm">
                        <div class="card-body d-flex flex-column justify-content-center py-5">
                            <i class="bi bi-person-gear display-1 text-info mb-3"></i>
                            <h5 class="card-title text-dark mb-2">User Settings</h5>
                            <p class="card-text text-muted">Manage your account and preferences</p>
                        </div>
                    </div>
                </a>
            </div>
        }

        <!-- Privacy Section - Available to all users -->
        <div class="col-12 col-sm-6 col-lg-3">
            <a asp-page="/Privacy" class="text-decoration-none">
                <div class="card h-100 text-center dashboard-card border-0 shadow-sm">
                    <div class="card-body d-flex flex-column justify-content-center py-5">
                        <i class="bi bi-shield-check display-1 text-warning mb-3"></i>
                        <h5 class="card-title text-dark mb-2">Privacy</h5>
                        <p class="card-text text-muted">Learn about our privacy policy</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- JSON Beautifier Section - Available to all users -->
        <div class="col-12 col-sm-6 col-lg-3">
            <a asp-page="/Tools/JsonBeautifier" class="text-decoration-none">
                <div class="card h-100 text-center dashboard-card border-0 shadow-sm">
                    <div class="card-body d-flex flex-column justify-content-center py-5">
                        <i class="bi bi-braces-asterisk display-1 text-secondary mb-3"></i>
                        <h5 class="card-title text-dark mb-2">JSON Beautifier</h5>
                        <p class="card-text text-muted">Beautify or minify JSON with ease</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- XML Beautifier Section - Available to all users -->
        <div class="col-12 col-sm-6 col-lg-3">
            <a asp-page="/Tools/XmlBeautifier" class="text-decoration-none">
                <div class="card h-100 text-center dashboard-card border-0 shadow-sm">
                    <div class="card-body d-flex flex-column justify-content-center py-5">
                        <i class="bi bi-code-square display-1 text-primary mb-3"></i>
                        <h5 class="card-title text-dark mb-2">XML Beautifier</h5>
                        <p class="card-text text-muted">Beautify or minify XML with ease</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Random User Generator Section - Available to all users -->
        <div class="col-12 col-sm-6 col-lg-3">
            <a asp-page="/Tools/RandomUser" class="text-decoration-none">
                <div class="card h-100 text-center dashboard-card border-0 shadow-sm">
                    <div class="card-body d-flex flex-column justify-content-center py-5">
                        <i class="bi bi-people display-1 text-success mb-3"></i>
                        <h5 class="card-title text-dark mb-2">Random User Generator</h5>
                        <p class="card-text text-muted">Generate random user data for testing</p>
                    </div>
                </div>
            </a>
        </div>
    </div>

    @if (User.Identity?.IsAuthenticated != true)
    {
        <div class="row mt-5">
            <div class="col-12 text-center">
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Sign in to access more features!</strong>
                    <br>
                    <small>My Notes, Password Vault, Shopping Lists, and User Settings are available after signing in.</small>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .dashboard-card {
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .dashboard-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .dashboard-card:hover .card-body i {
        transform: scale(1.1);
    }
    
    .dashboard-card .card-body i {
        transition: transform 0.3s ease;
    }
</style>
