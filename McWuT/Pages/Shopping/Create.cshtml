@page
@using McWuT.Web.Pages.Shopping
@model CreateModel
@{
    ViewData["Title"] = "Create Shopping List";
}

<div class="container py-5">
    <!-- Breadcrumb -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="./Index" class="text-decoration-none"><i class="bi bi-cart-check me-1"></i>Shopping Lists</a></li>
                    <li class="breadcrumb-item active">Create New List</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <!-- Header -->
            <div class="text-center mb-5">
                <div class="p-4 bg-warning bg-opacity-10 rounded-circle d-inline-flex mb-3">
                    <i class="bi bi-plus-lg display-4 text-warning"></i>
                </div>
                <h1 class="fw-bold text-dark mb-2">Create Shopping List</h1>
                <p class="text-muted fs-5">Give your new shopping list a memorable name</p>
            </div>

            <!-- Form Card -->
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-gradient bg-warning text-dark text-center py-4 border-0">
                    <h4 class="mb-0 fw-semibold">
                        <i class="bi bi-list-ul me-2"></i>New Shopping List
                    </h4>
                </div>
                
                <div class="card-body p-4 p-md-5">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 rounded-3" role="alert"></div>
                        
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-semibold text-dark mb-2">
                                <i class="bi bi-tag me-2 text-warning"></i>List Name <span class="text-danger">*</span>
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-list-ul text-muted"></i>
                                </span>
                                <input asp-for="Name" class="form-control border-start-0 ps-0" 
                                       placeholder="e.g., Weekly Groceries, Party Supplies..." 
                                       autocomplete="off" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                            <div class="form-text mt-2">
                                <i class="bi bi-info-circle me-1"></i>
                                Choose a descriptive name that helps you identify this list later.
                            </div>
                        </div>

                        <!-- Examples Section -->
                        <div class="mb-4 p-3 bg-light rounded-3 border-start border-5 border-warning">
                            <h6 class="fw-semibold text-dark mb-2">
                                <i class="bi bi-lightbulb me-2 text-warning"></i>Popular List Names
                            </h6>
                            <div class="row g-2">
                                <div class="col-6">
                                    <button type="button" class="btn btn-outline-secondary btn-sm w-100 list-suggestion" data-name="Weekly Groceries">
                                        <i class="bi bi-basket me-1"></i>Weekly Groceries
                                    </button>
                                </div>
                                <div class="col-6">
                                    <button type="button" class="btn btn-outline-secondary btn-sm w-100 list-suggestion" data-name="Party Supplies">
                                        <i class="bi bi-balloon me-1"></i>Party Supplies
                                    </button>
                                </div>
                                <div class="col-6">
                                    <button type="button" class="btn btn-outline-secondary btn-sm w-100 list-suggestion" data-name="Home Essentials">
                                        <i class="bi bi-house me-1"></i>Home Essentials
                                    </button>
                                </div>
                                <div class="col-6">
                                    <button type="button" class="btn btn-outline-secondary btn-sm w-100 list-suggestion" data-name="Holiday Shopping">
                                        <i class="bi bi-gift me-1"></i>Holiday Shopping
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex flex-column flex-md-row gap-3">
                            <a asp-page="./Index" class="btn btn-outline-secondary btn-lg px-4 order-2 order-md-1">
                                <i class="bi bi-arrow-left me-2"></i>Back to Lists
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg px-5 flex-grow-1 fw-semibold order-1 order-md-2 shadow">
                                <i class="bi bi-check-lg me-2"></i>Create Shopping List
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Tips Card -->
            <div class="card border-0 bg-light mt-4">
                <div class="card-body p-4 text-center">
                    <h6 class="fw-semibold text-dark mb-2">
                        <i class="bi bi-question-circle me-2 text-info"></i>What's Next?
                    </h6>
                    <p class="text-muted small mb-0">
                        After creating your list, you'll be able to add items with quantities, categories, and mark them as purchased when shopping.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Auto-fill name suggestions
        document.querySelectorAll('.list-suggestion').forEach(button => {
            button.addEventListener('click', function() {
                document.getElementById('Name').value = this.getAttribute('data-name');
                document.getElementById('Name').focus();
            });
        });

        // Auto-focus on the name input
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('Name').focus();
        });
    </script>
}

<style>
.card {
    border-radius: 1rem !important;
}

.card-header {
    border-radius: 1rem 1rem 0 0 !important;
}

.btn {
    border-radius: 0.5rem;
}

.list-suggestion:hover {
    transform: translateY(-1px);
    box-shadow: 0 0.125rem 0.5rem rgba(0, 0, 0, 0.1);
}

.input-group-text {
    border-radius: 0.5rem 0 0 0.5rem;
}

.form-control {
    border-radius: 0 0.5rem 0.5rem 0;
}
</style>