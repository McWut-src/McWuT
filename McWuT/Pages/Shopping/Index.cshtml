@page
@using McWuT.Web.Pages.Shopping
@model IndexModel
@{
    ViewData["Title"] = "Shopping Lists";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                <div class="mb-3 mb-md-0">
                    <h1 class="fw-bold text-dark mb-1">
                        <i class="bi bi-cart-check text-warning me-3"></i>Shopping Lists
                    </h1>
                    <p class="text-muted mb-0 fs-6">Organize and manage your shopping lists efficiently</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-page="./Create" class="btn btn-warning px-4 py-2 fw-semibold shadow-sm">
                        <i class="bi bi-plus-lg me-2"></i>Create New List
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (Model.ShoppingLists.Any())
    {
        <!-- Stats Cards -->
        <div class="row mb-4">
            <div class="col-6 col-md-3">
                <div class="card border-0 bg-primary bg-opacity-10 h-100">
                    <div class="card-body text-center py-3">
                        <div class="text-primary fs-4 fw-bold">@Model.ShoppingLists.Count</div>
                        <div class="text-primary-emphasis small">Total Lists</div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card border-0 bg-success bg-opacity-10 h-100">
                    <div class="card-body text-center py-3">
                        <div class="text-success fs-4 fw-bold">@Model.ItemCounts.Values.Sum()</div>
                        <div class="text-success-emphasis small">Total Items</div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card border-0 bg-info bg-opacity-10 h-100">
                    <div class="card-body text-center py-3">
                        <div class="text-info fs-4 fw-bold">@Model.ShoppingLists.Where(l => Model.ItemCounts.GetValueOrDefault(l.Id, 0) > 0).Count()</div>
                        <div class="text-info-emphasis small">Active Lists</div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card border-0 bg-secondary bg-opacity-10 h-100">
                    <div class="card-body text-center py-3">
                        <div class="text-secondary fs-4 fw-bold">@((Model.ItemCounts.Values.Sum() > 0 ? (Model.ItemCounts.Values.Sum() / (double)Model.ShoppingLists.Count) : 0).ToString("F0"))</div>
                        <div class="text-secondary-emphasis small">Avg Items/List</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Shopping Lists Grid -->
        <div class="row g-4">
            @foreach (var list in Model.ShoppingLists)
            {
                <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                    <div class="card border-0 shadow-sm h-100 shopping-list-card position-relative">
                        <!-- Status Indicator -->
                        <div class="position-absolute top-0 end-0 m-3">
                            @if (Model.ItemCounts.GetValueOrDefault(list.Id, 0) == 0)
                            {
                                <span class="badge bg-light text-dark border">Empty</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">@Model.ItemCounts.GetValueOrDefault(list.Id, 0) items</span>
                            }
                        </div>

                        <div class="card-body p-4">
                            <!-- List Icon & Title -->
                            <div class="d-flex align-items-center mb-3">
                                <div class="p-2 bg-warning bg-opacity-10 rounded-circle me-3">
                                    <i class="bi bi-list-ul text-warning fs-4"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h5 class="card-title fw-bold mb-1 text-truncate">@list.Name</h5>
                                    <p class="text-muted small mb-0">
                                        <i class="bi bi-calendar3 me-1"></i>@list.CreatedDate.ToString("MMM dd, yyyy")
                                    </p>
                                </div>
                            </div>

                            <!-- Progress Indicator -->
                            @{
                                var itemCount = Model.ItemCounts.GetValueOrDefault(list.Id, 0);
                            }
                            @if (itemCount > 0)
                            {
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between small text-muted mb-1">
                                        <span>Shopping Progress</span>
                                        <span>@itemCount items</span>
                                    </div>
                                    <div class="progress" style="height: 6px;">
                                        <div class="progress-bar bg-warning" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="mb-3">
                                    <div class="text-center py-2">
                                        <i class="bi bi-plus-circle text-muted fs-5"></i>
                                        <p class="text-muted small mb-0 mt-1">Ready for items</p>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Card Actions -->
                        <div class="card-footer bg-transparent border-0 px-4 pb-4">
                            <div class="d-flex gap-2">
                                <a asp-page="./Details" asp-route-id="@list.UniqueId" class="btn btn-warning flex-fill fw-semibold">
                                    <i class="bi bi-eye me-1"></i>View
                                </a>
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary dropdown-toggle px-3" type="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" asp-page="./Edit" asp-route-id="@list.UniqueId">
                                                <i class="bi bi-pencil me-2"></i>Edit Name
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item text-danger" asp-page="./Delete" asp-route-id="@list.UniqueId">
                                                <i class="bi bi-trash me-2"></i>Delete
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="text-center py-5">
                    <div class="mb-4">
                        <div class="p-4 bg-warning bg-opacity-10 rounded-circle d-inline-flex">
                            <i class="bi bi-cart-x display-3 text-warning"></i>
                        </div>
                    </div>
                    <h3 class="fw-bold text-dark mb-3">No Shopping Lists Yet</h3>
                    <p class="text-muted mb-4 fs-5">Start organizing your shopping by creating your first list!</p>
                    <a asp-page="./Create" class="btn btn-warning btn-lg px-5 py-3 fw-semibold shadow">
                        <i class="bi bi-plus-lg me-2"></i>Create Your First List
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<style>
.shopping-list-card {
    transition: all 0.3s ease;
    border-radius: 1rem !important;
}

.shopping-list-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 0.5rem 2rem rgba(0, 0, 0, 0.15) !important;
}

.shopping-list-card .card-footer {
    border-radius: 0 0 1rem 1rem !important;
}

.btn {
    border-radius: 0.5rem;
}
</style>